<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Username:"/>
                    <TextField fx:id="usernameField"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Password:"/>
                    <PasswordField fx:id="passwordField"/>
                </HBox>
                <Button text="Login" onAction="#handleLogin"/>
                <Label fx:id="judgementLabel" text=""/>
            </children>
        </VBox>
    </children>
</AnchorPane>
