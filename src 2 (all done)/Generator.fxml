<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.GeneratorController" spacing="15" alignment="CENTER">

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="switchToInventoryButton" text="Switch to Inventory" onAction="#switchToInventory"/>
    </HBox>

    <FlowPane hgap="10" vgap="10" alignment="CENTER">
        <Button fx:id="generateEngineButton" text="Generate Engine" onAction="#generateEngineItem"/>
        <Button fx:id="generateChemButton" text="Generate Chemical" onAction="#generateChemItem"/>
        <Button fx:id="generateElectronicsButton" text="Generate Electronics" onAction="#generateElectronicsItem"/>
    </FlowPane>

    <Label fx:id="generatedLabel" text=""/>
</VBox>
